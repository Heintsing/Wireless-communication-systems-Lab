<?xml version="1.0"?>
<block>
  <name>fir_filter</name>
  <key>mymod_fir_filter</key>
  <category>mymod</category>
  <import>import mymod</import>
  <import>from gnuradio.filter import firdes</import>
  <make>mymod.fir_filter($decim, $taps)</make>

  <param>
    <name>Decimation</name>
    <key>decim</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Taps</name>
    <key>taps</key>
    <type>float_vector</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
